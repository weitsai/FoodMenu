<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/literal_background_00"
    android:orientation="vertical"
    android:padding="10dp" >

    <Spinner
        android:id="@+id/literalSpinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </Spinner>

    <ListView
        android:id="@+id/literalListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:cacheColorHint="#00000000" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/icon_dish_00"
                android:clickable="true"
                android:gravity="center"
                android:onClick="goLastActivity"
                android:text="取  消"
                android:textColor="@color/white"
                android:textSize="24dp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/icon_dish_00"
                android:clickable="true"
                android:gravity="center"
                android:onClick="goCheckoutActivity"
                android:text="確  認"
                android:textColor="@color/white"
                android:textSize="24dp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>