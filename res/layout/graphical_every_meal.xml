<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/graphicalEveryMealImageViewPicture"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:src="@drawable/icon_soup_00" >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="subMealCount"
            android:src="@drawable/icon_sub" >
        </ImageView>

        <TextView
            android:id="@+id/graphicalEveryMealTextViewMealCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" >
        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="addMealCount"
            android:src="@drawable/icon_add" >
        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/graphicalEveryMealTextViewMealName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textSize="32dp" >
    </TextView>

    <TextView
        android:id="@+id/graphicalEveryMealTextViewMealPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="20dp"
        android:textColor="@color/white" >
    </TextView>

    <TextView
        android:id="@+id/graphicalEveryMealTextViewMealIntroduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="美食介紹"
        android:textColor="@color/orange"
        android:textSize="20dp" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_dish_00"
                android:clickable="true"
                android:gravity="center"
                android:onClick="cancelSaveMealCount"
                android:text="取  消"
                android:textColor="@color/white"
                android:textSize="22dp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_dish_00"
                android:clickable="true"
                android:gravity="center"
                android:onClick="confirmSaveMealCount"
                android:text="確  認"
                android:textColor="@color/white"
                android:textSize="22dp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>